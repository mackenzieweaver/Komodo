@model Komodo.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageData)
        </dd>
        <dt class="col-sm-2">
            Team Members
        </dt>
        <dd class="col-sm-10">
            @foreach (var user in Model.ProjectUsers)
            {
                @user.User.FullName <br />
            }
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Created
                </th>
                <th>
                    Updated
                </th>
                <th>
                    Project
                </th>
                <th>
                    TicketType
                </th>
                <th>
                    TicketPriority
                </th>
                <th>
                    TicketStatus
                </th>
                <th>
                    OwnerUser
                </th>
                <th>
                    DeveloperUser
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Tickets)
            {
                <tr>
                    <td>
                        @ticket.Title
                    </td>
                    <td>
                        @ticket.Description
                    </td>
                    <td>
                        @ticket.Created
                    </td>
                    <td>
                        @ticket.Updated
                    </td>
                    <td>
                        @Model.Name
                    </td>
                    <td>
                        @ticket.TicketType.Name
                    </td>
                    <td>
                        @ticket.TicketPriority.Name
                    </td>
                    <td>
                        @ticket.TicketStatus.Name
                    </td>
                    <td>
                        @ticket.OwnerUser.FullName
                    </td>
                    <td>
                        @ticket.DeveloperUser.FullName
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="AssignUsers" asp-route-id="@Model.Id">Assign</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
