@model IEnumerable<Komodo.Models.Project>

@{
    ViewData["Title"] = "My Projects";
}

<h1>My Projects</h1>
<p>
    <a class="btn btn-light btn-lg" asp-controller="Projects" asp-action="Create">New Project</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageData)
            </th>*@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageData)
                </td>*@
            <td>
                <a asp-action="AssignUsers" asp-route-id="@item.Id" class="btn btn-outline-dark text-white">Assign</a>
                <a asp-controller="Projects" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark text-white">Edit</a>
                <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark text-white">Details</a>
            </td>
            </tr>
        }
    </tbody>
</table>
