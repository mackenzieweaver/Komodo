@model IEnumerable<Komodo.Models.Ticket>
@{
    ViewData["Title"] = "My Tickets";
}

<h1>My assignments</h1>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">New Ticket</a>
</p>

<table id="ticketsIndex" class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Created
            </th>
            <th>
                Updated
            </th>
            <th>
                Project
            </th>
            <th>
                Type
            </th>
            <th>
                Priority
            </th>
            <th>
                Status
            </th>
            <th>
                Owner
            </th>
            <th>
                Developer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>
                    @ticket.Title
                </td>
                <td>
                    @ticket.Description
                </td>
                <td>
                    @ticket.Created
                </td>
                <td>
                    @ticket.Updated
                </td>
                <td>
                    @ticket.Project.Name
                </td>
                <td>
                    @ticket.TicketType.Name
                </td>
                <td>
                    @ticket.TicketPriority.Name
                </td>
                <td>
                    @ticket.TicketStatus.Name
                </td>
                <td>
                    @ticket.OwnerUser.FullName
                </td>
                <td>
                    @ticket.DeveloperUser.FullName
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@ticket.Id">Details</a>
                    <a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>